datasource DS {
  // optionally set multiple providers
  // example: provider = ["sqlite", "postgresql"]
  provider = "sqlite"



  url = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

// Define your own datamodels here and run `yarn redwood db save` to create
// migrations for them.

model Image {
  id    Int    @id @default(autoincrement())
  title String
  url   String
  likes Int? @default(0)

  comments Comment[]

  likedBy User[] @relation("likedBy")

  author User? @relation("author")
}

model Comment {
  id       Int        @id @default(autoincrement())
  body     String

  image    Image      @relation(fields: [imageId], references: [id])
  imageId  Int

  poster User @relation(fields: [posterId], references: [id])
  posterId Int
}

model User {
  id         Int         @id @default(autoincrement())
  name        String
  handle String @unique
  email       String       @unique
  password         String

  image Image @relation("likedBy", fields: [imageLikedById], references: [id])
  imageLikedById Int

  author Image @relation("author", fields: [authorId], references: [id])
  authorId Int

  poster Comment?
}